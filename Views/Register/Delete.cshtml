@model HolidayHome.Models.RegisterModel
@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>
<p class="text-danger">Are you sure you want to delete this user?</p>
<hr />

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FirstName)</dt>
    <dd class="col-sm-9">@Model.FirstName</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.LastName)</dt>
    <dd class="col-sm-9">@Model.LastName</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Email)</dt>
    <dd class="col-sm-9">@Model.Email</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Email" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="UserList" class="btn btn-secondary ms-2">Cancel</a>
</form>
