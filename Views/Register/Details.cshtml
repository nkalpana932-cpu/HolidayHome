@model HolidayHome.Models.RegisterModel
@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FirstName)</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.LastName)</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Email)</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PhoneNumber)</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.AddressLine1)</dt>
        <dd class="col-sm-9">@Model.AddressLine1</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.AddressLine2)</dt>
        <dd class="col-sm-9">@Model.AddressLine2</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.State)</dt>
        <dd class="col-sm-9">@Model.State</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ZipCode)</dt>
        <dd class="col-sm-9">@Model.ZipCode</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-email="@Model.Email" class="btn btn-primary">Edit</a>
    <a asp-action="UserList" class="btn btn-secondary">Back to List</a>
</div>
